int palindrome(char *str);
int main()
{
   char str[80], *p;
   int result = INIT_VALUE;
    
   printf("Enter a string: \n");
   fgets(str, 80, stdin);
   if (p=strchr(str,'\n')) *p = '\0';  
Page 6
   result = palindrome(str);
   if (result == 1)
      printf("palindrome(): A palindrome\n");
   else if (result == 0)
      printf("palindrome(): Not a palindrome\n");     
   else  
      printf("An error\n");       
   return 0;
}
int palindrome(char *str)
{
    int size,p;
    size=strlen(str)-1;
    for (p=0; p<size; p++)
    {
        if (str[p]!=str[size-p])
        {
            return 0;
        }
    }
    return 1;
}
